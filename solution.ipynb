    "def predict_with_probability(model, data_loader):\n",
    "    model.eval()\n",
    "    predictions_prob = []\n",
    "    with torch.no_grad():\n",
    "        for batch_X, _ in data_loader:\n",
    "            batch_X = batch_X.to(device)\n",
    "            outputs = model(batch_X)\n",
    "            predictions_prob.append(outputs.cpu().numpy())\n",
    "    predictions_prob = np.vstack(predictions_prob).flatten()\n",
    "    return predictions_prob, (predictions_prob > 0.5).astype(int)\n\n",
    "my_prob, my_pred = predict_with_probability(my_model, test_loader)\n\n",
    "test_start_idx = len(btc_features) - len(y_test) + sequence_length\n",
    "test_prices_aligned = btc_features[\'Close\'].iloc[test_start_idx:test_start_idx+len(y_test_seq)].values\n",
    "test_dates_aligned = btc_features.index[test_start_idx:test_start_idx+len(y_test_seq)]\n\n",
    "def simulate_probability_trading(predictions_prob, actual_prices, dates, initial_capital=10000, transaction_fee=0.001, threshold=0.5, position_scaling=True):\n",
    "    cash = initial_capital\n",
    "    btc_holdings = 0\n",
    "    portfolio_values = []\n",
    "    for i in range(len(predictions_prob)):\n",
    "        current_price = actual_prices[i]\n",
    "        prob = predictions_prob[i]\n",
    "        portfolio_value = cash + btc_holdings * current_price\n",
    "        portfolio_values.append(portfolio_value)\n\n",
    "        invest_ratio = 0\n",
    "        if prob > threshold:\n",
    "            invest_ratio = prob if position_scaling else 1.0\n\n",
    "        target_btc_value = portfolio_value * invest_ratio\n",
    "        current_btc_value = btc_holdings * current_price\n\n",
    "        if target_btc_value > current_btc_value:\n",
    "            buy_cash = target_btc_value - current_btc_value\n",
    "            if buy_cash > cash: buy_cash = cash\n",
    "            if buy_cash > 0:\n",
    "                buy_amount = (buy_cash * (1 - transaction_fee)) / current_price\n",
    "                btc_holdings += buy_amount\n",
    "                cash -= buy_cash\n",
    "        elif target_btc_value < current_btc_value:\n",
    "            sell_btc = (current_btc_value - target_btc_value) / current_price\n",
    "            if sell_btc > btc_holdings: sell_btc = btc_holdings\n",
    "            if sell_btc > 0:\n",
    "                sell_value = sell_btc * current_price * (1 - transaction_fee)\n",
    "                cash += sell_value\n",
    "                btc_holdings -= sell_btc\n\n",
    "    if btc_holdings > 0:\n",
    "        cash += btc_holdings * actual_prices[-1] * (1-transaction_fee)\n\n",
    "    final_value = cash\n",
    "    total_return = (final_value - initial_capital) / initial_capital * 100\n",
    "    return {'final_value': final_value, 'total_return': total_return, 'portfolio_values': portfolio_values}\n\n",
    "initial_price = test_prices_aligned[0]\n",
    "final_price = test_prices_aligned[-1]\n",
    "buy_hold_return = (final_price - initial_price) / initial_price * 100\n\n",
    "best_return = -100\n",
    "best_threshold = 0\n",
    "for threshold in np.arange(0.5, 0.8, 0.01):\n",
    "    result = simulate_probability_trading(my_prob, test_prices_aligned, test_dates_aligned, threshold=threshold)\n",
    "    if result['total_return'] > best_return:\n",
    "        best_return = result['total_return']\n",
    "        best_threshold = threshold\n\n",
    "best_result = simulate_probability_trading(my_prob, test_prices_aligned, test_dates_aligned, threshold=best_threshold)\n\n",
    "print(f'Optimal Threshold: {best_threshold:.2f}')\n",
    "print(f'My Strategy Return: {best_result['total_return']:.2f}%')\n",
    "print(f'Buy and Hold Return: {buy_hold_return:.2f}%')\n\n",
    "plt.figure(figsize=(15, 7))\n",
    "plt.plot(test_dates_aligned, best_result['portfolio_values'], label=f'My Strategy (Return: {best_result['total_return']:.2f}%)')\n",
    "plt.plot(test_dates_aligned, (1 + buy_hold_return/100) * 10000 * (test_prices_aligned / initial_price), label=f'Buy and Hold (Return: {buy_hold_return:.2f}%)', linestyle='--')\n",
    "plt.title('Trading Strategy vs. Buy and Hold')\n",
    "plt.xlabel('Date')\n",
    "    plt.ylabel('Portfolio Value ($)')\n",
        "    plt.legend()\n",
        "    plt.show()\n\n",
        "    with open('results.txt', 'w') as f:\n",
        "        f.write(f'Optimal Threshold: {best_threshold:.2f}\\n')\n",
        "        f.write(f'My Strategy Return: {best_result['total_return']:.2f}%\\n')\n",
        "        f.write(f'Buy and Hold Return: {buy_hold_return:.2f}%\\n')\n",
        "        f.write(f'Model Architecture: {my_model}\\n')\n",
        "        f.write('Trading Strategy: Probability-based with thresholding and position scaling\\n')"
       ]
      }
